APP_NAME="Laravel Scan Login Demo"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# Create this file with: touch database/demo.sqlite
DB_DATABASE=database/demo.sqlite

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Laravel Scan Login Configuration
# Demo credentials: demo@example.com / password
SCAN_LOGIN_ENABLED=true
SCAN_LOGIN_TOKEN_EXPIRY_MINUTES=5
SCAN_LOGIN_TOKEN_LENGTH=64
SCAN_LOGIN_POLLING_INTERVAL_SECONDS=3
SCAN_LOGIN_MAX_POLLING_DURATION_MINUTES=10
SCAN_LOGIN_QR_CODE_SIZE=200
SCAN_LOGIN_QR_CODE_ERROR_CORRECTION=M
SCAN_LOGIN_SUCCESS_REDIRECT=/demo/dashboard
SCAN_LOGIN_MOBILE_VIEW=demo.mobile-login
SCAN_LOGIN_QR_CODE_VIEW=scan-login::qr-code
SCAN_LOGIN_ROUTE_PREFIX=scan-login
SCAN_LOGIN_REQUIRE_HTTPS=false
SCAN_LOGIN_RATE_LIMIT_PER_MINUTE=20
SCAN_LOGIN_MAX_LOGIN_ATTEMPTS=5
SCAN_LOGIN_CLEANUP_EXPIRED_TOKENS=true
SCAN_LOGIN_CLEANUP_INTERVAL_HOURS=24
SCAN_LOGIN_CLEANUP_BATCH_SIZE=1000
SCAN_LOGIN_ENABLE_LOGGING=true
SCAN_LOGIN_LOG_CHANNEL=single
SCAN_LOGIN_LOG_FAILED_ATTEMPTS=true
SCAN_LOGIN_CACHE_STORE=file
SCAN_LOGIN_CACHE_PREFIX=demo_scan_login